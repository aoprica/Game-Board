<Window x:Class="Simple_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Connect" Height="23" HorizontalAlignment="Center" Name="JoinGameButton" VerticalAlignment="Center" Width="75" Click="JoinGameButton_Click" />
        <TextBox Height="24" HorizontalAlignment="Center" Margin="0,0,0,315" Name="PlayerNameTextField" Text="Player Name" VerticalAlignment="Bottom" Width="200" FontFamily="Segoe UI" FontSize="14" MaxLength="30" />
        <TextBlock Height="50" HorizontalAlignment="Center" Margin="0,90,0,0" Name="ServerResponseText" Text="Server Response:" VerticalAlignment="Top" Width="500" />
    </Grid>
</Window>
